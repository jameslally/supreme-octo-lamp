{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ðŸš€ Launch Streamlit App",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": ["run", "src/app.py"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": true
        },
        {
            "name": "ðŸ’» Launch CLI",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/cli.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [],
            "justMyCode": true
        },
        {
            "name": "ðŸ§ª Run Structure Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_structure_only.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "ðŸ“¦ Install Package (Dev Mode)",
            "type": "python",
            "request": "launch",
            "module": "pip",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["install", "-e", "."],
            "justMyCode": true
        }
    ]
}